          "weight": 10,
          "explanation": "Must be a street vendor"
        },
        {
          "rule_id": "R005_02",
          "field": "location.area_type",
          "operator": "in",
          "value": [
            "Urban",
            "Semi-Urban"
          ],
          "weight": 9,
          "explanation": "Must operate in urban or peri-urban area"
        },
        {
          "rule_id": "R005_03",
          "field": "financial.has_bank_account",
          "operator": "equals",
          "value": true,
          "weight": 8,
          "explanation": "Bank account required for loan disbursement"
        }
      ],
      "exclusion_rules": [],
      "minimum_score": 22,
      "alternative_schemes": []
    },
    "SCH006": {
      "scheme_name": "PMJJBY",
      "rule_type": "inclusion_based",
      "logic": "AND",
      "inclusion_rules": [
        {
          "rule_id": "R006_01",
