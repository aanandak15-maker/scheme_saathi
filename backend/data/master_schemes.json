    {
        "scheme_id": "PM_KISAN",
        "scheme_name": "PM-KISAN Samman Nidhi",
        "scheme_name_hindi": "पीएम-किसान सम्मान निधि",
        "category": "Agriculture",
        "subcategory": "Farmer Income Support",
        "ministry": "Ministry of Agriculture & Farmers Welfare",
        "launched_year": 2019,
        "benefit_amount": "₹6,000 per year",
        "benefit_type": "Direct Cash Transfer",
        "description": "₹6000/year direct income support to farmer families in 3 installments.",
        "eligibility_criteria": {
            "age_min": 18,
            "occupation": [
                "farmer"
            ],
            "land_ownership": true,
            "exclusions": [
                "institutional_farmer",
                "govt_employee",
                "income_tax_payer"
            ],
            "engine_rules": {
                "rule_type": "inclusion_with_exclusions",
                "logic": "AND",
                "inclusion_rules": [
                    {
                        "rule_id": "PM_KISAN_R1",
                        "field": "is_farmer",
                        "operator": "equals",
                        "value": true,
                        "weight": 15,
                        "explanation": "Must be a farmer"
                    },
                    {
                        "rule_id": "PM_KISAN_R2",
                        "field": "land_ownership.owns_land",
                        "operator": "equals",
                        "value": true,
                        "weight": 15,
                        "explanation": "Must own cultivable land"
                    }
                ],
                "exclusion_rules": [
                    {
                        "rule_id": "PM_KISAN_E1",
                        "field": "occupation.income_level",
                        "operator": "equals",
                        "value": "High",
                        "disqualifies": true,
                        "explanation": "High income families are not eligible"
                    }
                ],
                "minimum_score": 15
            }
        },
        "application_process": {
            "portal_url": "https://pmkisan.gov.in",
            "steps": [
                "Register on portal",
                "Aadhaar eKYC",
                "Land details",
                "Submit"
            ]
        },
        "required_documents": [
            {
                "doc_name": "Aadhaar Card",
                "mandatory": true
            },
            {
                "doc_name": "Land Records/Ownership Proof",
                "mandatory": true
            },
            {
                "doc_name": "Bank Account Passbook",
                "mandatory": true
            }
        ],
        "ai_context": {
            "target_audience": "Farmers",
            "typical_profile": "Land-owning farmer needing income support"
        },
        "status": "Active"
    },
